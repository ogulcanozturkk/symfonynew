{% extends 'homebase.html.twig' %}

{% block title %}İletişim {{ data[0].title }} {% endblock %}
{% block keywords %}{{ data[0].keywords }}{% endblock %}
{% block description %}{{ data[0].description }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-8">
            <div class="contact-form">
                <h2 class="title text-center">Bize Ulaşın</h2>
                {{ include('messages.html.twig') }}
                <form class="contact-form row" action="" name="messages" method="post" style="margin-left: 20px;">
                    <div class="form-group col-md-6">
                        <input type="text" name="messages[name]" class="form-control" required="required" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="email" name="messages[email]" class="form-control" required="required" placeholder="Email">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" name="messages[subject]" class="form-control" required="required" placeholder="Konu">
                    </div>
                    <div class="form-group col-md-12">
                        <textarea name="messages[message]" required="required" class="form-control" rows="6" placeholder="Mesajınızı giriniz."></textarea>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="hidden" name="token" value="{{ csrf_token('form-message') }}"/>
                        <input type="submit" name="submit" class="btn btn-primary pull-right" value="Submit">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="contact-info">
                <h2 class="title text-center">İletişim Bilgileri</h2>
                <address>
                    {{ data[0].contact|raw }}
                </address>
                <div class="social-networks">
                    <h2 class="title text-center">Daha iyi fikirleriniz mi var?</h2>
                    <ul>
                        <li>
                            Bize mail yoluyla tavsiyede bulunabilirsiniz.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}