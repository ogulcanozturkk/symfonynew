{% extends 'homebase.html.twig' %}

{% block title %}Yeni Üye Kaydı {% endblock %}


{% block content %}



    <div class="row">
        <div class="">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            Zaten Üyesiniz <br>
            User Name: {{ app.user.name}}<hr>
            User EMail: {{ app.user.email }}
            User Roles : {% for item in app.user.roles %}{{ item }}<br>
            {% endfor %}
            {%  else  %}
            <h1>Yeni Üye Form</h1>


            <form role="form" method="post">
                <div class="form-group">
                    <label>Adı Soyadı</label>
                    <input type="text" name="user[name]" class="form-control" placeholder="Adı Soyadı">
                </div>

                <div class="form-group">
                    <label>E-Mail</label>
                    <input type="email" name="user[email]" value="{{ user.email }} class="form-control"  placeholder="E-Mail Adresiniz">
                </div>

                <div class="form-group">
                    <label>Şifre</label>
                    <input type="password" name="user[password]" value="{{ user.password }}  class="form-control"  placeholder="Şifrenizi Girin">
                </div>
                <div class="form-group">
                    <label>Adres:</label>
                    <input type="text" name="user[address]" value="{{ user.address }} class="form-control"  placeholder="Şifrenizi Girin">
                </div>
                <div class="form-group">
                    <label>Telefon</label>

                    <input type="text" name="user[phone]" value="{{ user.phone }}" class="form-control"  placeholder="+901234567890">
                </div>
                <div class="form-group">
                    <label>Şehir</label>
                    <input type="text" name="user[city]" value="{{ user.city }}" class="form-control"  placeholder="ÖR: Karabük">
                </div>
                <div class="footer-bottom">
                    <input type="text" name="user[roles]" value="ROLE_USER">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <input type="hidden" name="token" value="{{ csrf_token('user-form') }}">
                    <button type="submit" class="btn btn-default">Cancel</button>
                </div>

            </form>

            </p>
            <div class="row"></div>
        </div>
        {% endif %}

    </div>
{% endblock %}

