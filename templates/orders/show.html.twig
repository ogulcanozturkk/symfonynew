{% extends 'homebase.html.twig' %}

{% block title %}Orders{% endblock %}

{% block content %}




    <h1>Orders</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Sale Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% set total=0 %}
        {% for rs in orderdetail %}
        <tr>
            <td>{{ rs.id }}</td>
            <td>{{ rs.name }}</td>
            <td>{{ rs.price }}</td>
            <td>{{ rs.quantity }}</td>
            <td>{{ rs.amount }}</td>
            <td>{{ rs.status }}</td>
        </tr>
        {% endfor %}
        <tr>
            <td colspan="5"><b>Toplam Alışveriş Tutarı: {{ order.amount }} TL</b></td>
        </tr>
        </tbody>
    </table>
{% endblock %}
